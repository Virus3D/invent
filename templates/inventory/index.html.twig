{% extends 'base.html.twig' %}

{% set title = 'page_title.inventory'|trans %}

{% block body %}
    {% include '_breadcrumb.html.twig' %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-box-seam"></i> {{ title }}
        </h1>
        <a href="{{ path('app_inventory_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> {{ 'common.actions.add'|trans }}
        </a>
    </div>

    <twig:CategoryFilter />

    <div class="d-flex justify-content-end mb-3">
        <button type="button"
                class="btn btn-outline-secondary btn-sm"
                data-controller="inventory-check"
                data-action="inventory-check#resetAll"
                data-inventory-check-reset-url-value="{{ path('api_inventory_check_reset') }}">
            <i class="bi bi-arrow-counterclockwise"></i> {{ 'inventory_item.check.reset_all'|trans }}
        </button>
    </div>

    {{ include('inventory/_list.html.twig', { items: items }) }}

{% endblock %}