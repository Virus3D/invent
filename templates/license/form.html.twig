{% extends 'base.html.twig' %}

{% set title = page_title|trans %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_dashboard') }}">
                            <i class="bi bi-house-door"></i> {{ 'breadcrumb.home'|trans }}
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_license_index') }}">
                            <i class="bi bi-shield-lock"></i> {{ 'breadcrumb.license'|trans }}
                        </a>
                    </li>
                    {% if license.id %}
                        <li class="breadcrumb-item active">{{ 'breadcrumb.edit'|trans }}</li>
                    {% else %}
                        <li class="breadcrumb-item active">{{ 'breadcrumb.create'|trans }}</li>
                    {% endif %}
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-shield-lock"></i> {{ page_title|trans }}
                    </h4>
                    {% if license.id %}
                        <span class="badge bg-light text-dark">
                            ID: {{ license.id }}
                        </span>
                    {% endif %}
                </div>

                <div class="card-body">
                    {{ form_start(form, {
                        'attr': {
                            'id': 'licenseForm',
                            'class': 'needs-validation',
                            'novalidate': 'novalidate'
                        }
                    }) }}

                    <div class="mb-3">
                        {{ form_label(form.name, null, {'label_attr': {'class': 'form-label required-field'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control' ~ (form_errors(form.name) ? ' is-invalid' : '')}}) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.licenseKey) }}
                        {{ form_widget(form.licenseKey, {'attr': {'class': 'form-control' ~ (form_errors(form.licenseKey) ? ' is-invalid' : '')}}) }}
                        {{ form_errors(form.licenseKey) }}
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.startDate) }}
                            {{ form_widget(form.startDate, {'attr': {'class': 'form-control' ~ (form_errors(form.startDate) ? ' is-invalid' : '')}}) }}
                            {{ form_errors(form.startDate) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.endDate) }}
                            {{ form_widget(form.endDate, {'attr': {'class': 'form-control' ~ (form_errors(form.endDate) ? ' is-invalid' : '')}}) }}
                            {{ form_errors(form.endDate) }}
                            <small class="form-text text-muted">
                                {{ 'license.form.end_date_hint'|trans }}
                            </small>
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        {{ form_widget(form.valid, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.valid, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        {{ form_errors(form.valid) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.location) }}
                        {{ form_widget(form.location, {'attr': {'class': 'form-select' ~ (form_errors(form.location) ? ' is-invalid' : '')}}) }}
                        {{ form_errors(form.location) }}
                    </div>

                    <hr class="my-4">

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_license_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> {{ 'common.actions.cancel'|trans }}
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> {{ 'common.actions.save'|trans }}
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

