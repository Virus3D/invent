{% extends 'base.html.twig' %}

{% block title %}{{ 'page_title.material_search'|trans }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h2">
                <i class="bi bi-search"></i> {{ 'page_title.material_search'|trans }}
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-funnel"></i> {{ 'search.parameters'|trans }}
                    </h5>
                </div>
                <div class="card-body">
                    <form method="get" action="{{ path('app_material_search') }}">
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label class="form-label">{{ 'search.query_label'|trans }}</label>
                                <input type="text"
                                       name="q"
                                       class="form-control"
                                       placeholder="{{ 'search.query_placeholder'|trans }}"
                                       value="{{ query }}"
                                       autofocus>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_material_index') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> {{ 'search.back_to_list'|trans }}
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> {{ 'search.search_button'|trans }}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {% if query is not null %}
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-search"></i> {{ 'search.results_title'|trans }}
                        {% if materials %}
                            <span class="badge bg-primary ms-2">{{ materials|length }}</span>
                        {% endif %}
                    </h5>
                </div>

                {% if materials and materials|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>{{ 'material.form.name'|trans }}</th>
                                <th>{{ 'material.form.quantity'|trans }}</th>
                                <th>{{ 'material.form.location'|trans }}</th>
                                <th class="text-end">{{ 'search.actions'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for material in materials %}
                                <tr>
                                    <td>{{ material.name }}</td>
                                    <td>
                                        <span class="badge bg-primary">{{ material.quantity }}</span>
                                    </td>
                                    <td>
                                        {% if material.location %}
                                            <a href="{{ path('app_location_show', {'id': material.location.id}) }}">
                                                {{ material.location }}
                                            </a>
                                        {% else %}
                                            <span class="text-muted">{{ 'material.not_location'|trans }}</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('app_material_show', {'id': material.id}) }}"
                                               class="btn btn-outline-info" title="{{ 'search.view'|trans }}">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="{{ path('app_material_edit', {'id': material.id}) }}"
                                               class="btn btn-outline-primary" title="{{ 'search.edit'|trans }}">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% elseif query is not null %}
                <div class="card-body text-center py-5">
                    <i class="bi bi-search display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">{{ 'search.nothing_found'|trans }}</h4>
                    <p class="text-muted mb-4">{{ 'search.nothing_found_desc'|trans }}</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
